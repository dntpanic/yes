<%= semantic_form_for [:admin, @person] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :about, :hint => f.template.wysiwyg(:person_about) %>
    <%= f.input :twitter_url %>
    <%= f.input :facebook_url %>
    <%= f.input :avatar, :hint => f.template.image_tag(f.object.avatar.url(:small)) %>
  <% end %>
  <%= f.buttons %>
<% end %>
