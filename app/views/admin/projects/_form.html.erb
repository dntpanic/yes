<%= semantic_form_for [:admin, @project] do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :person %>
    <%= wysiwyg :project_content %>
    <%= f.input :content %>
    <%= f.input :thumbnail,
      :label => 'Logo',
      :hint => f.template.image_tag(f.object.thumbnail.url(:small)) %>
  <% end %>
  <%= f.buttons %>
<% end %>
