<div class="top-panel">
  <div class="text">
    <p>
      <%= @index_header %>
    </p>
    <div class="likeit">
      <div class="facebook"><img src="/assets/fb.gif" alt="fb" width="177" height="24" /></div>
      <div class="twitter"><img src="/assets/twitter.gif" alt="twitter" width="98" height="22" /></div>
    </div>
  </div>
</div>
<div class="content">
  <h1 class="title-move">Двигаем Х</h1>
  <div class="slider-wrapper">
    <ul class="slider">
      <% @last[0].sort_by(&:created_at).each do |item| %>
      <li>
        <div class="box">
          <a href="<%= (item.has_attribute?(:cut) ? "blog_inside/" : "inside_project/") + item.id.to_s %>">
            <span class="image">
              <% if (item.has_attribute?(:thumbnail_file_name)) %>
                <%= image_tag(item.thumbnail, :size => "127x127") %>
                <span class="mask"></span>
              <% else %>
                <img src="/assets/img04.gif" alt="description" width="127" height="127" />
                <span class="mask"></span>
              <% end %>
            </span>
            <strong class="title">Из "<%= item.title %>"</strong>
            <% if (item.has_attribute?(:cut)) %>
              <%= truncate(item.cut, :length => 100) %>
            <% else %>
              <%= truncate(item.content, :length => 100) %>
            <% end %>
          </a>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
  <a class="btn-next">next</a>
</div>
<script type="text/javascript">
  jQuery(".slider-wrapper").jCarouselLite({
    btnNext: ".btn-next",
    btnPrev: ".btn-prev",
    circular: true,
    scroll: 3,
    speed: 400
  });
</script>