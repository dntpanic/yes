<div class="top-panel">
  <div class="text">
    <%= @people_header %>
  </div>
</div>
<div class="main">
  <div class="title">
    <h1 class="title-people">Люди</h1>
    <div class="likeit">
      <div class="facebook">
        <div class="fb-like" data-send="false" data-width="250" data-show-faces="false"></div>
      </div>
      <div class="twitter">
        <a href="https://twitter.com/share" class="twitter-share-button" data-text="This page is so cool:" data-hashtags="betterthanworse">Tweet</a>
      </div>
    </div>
  </div>
  <div class="content">
    <ul class="photos-list">
      <% @people.each do |person| %>
        <li>
        <a href="/profile/<%= person.id.to_s %>">
          <%= image_tag(person.avatar, :size => "151x151") %>
          <span class="mask"></span>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="bottom-box">
    <h2>Случайные работы:</h2>
    <ul class="items-list">
      <% @projects.each do |prj| %>
      <li>
        <a href="/inside_project/<%= prj.id %>/">
          <%= image_tag(prj.thumbnail, :size => "101x101") %>
          <span class="mask"></span>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
</div>