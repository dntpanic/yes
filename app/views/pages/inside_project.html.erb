<div class="main">
  <div class="content">
    <h1><%= @project.title %></h1>
    <!--div class="visual">
      <img src="/assets/image03.gif" width="600" height="429" alt="image description" />
    </div-->
    <p><%= @project.content %></p>
    <div class="likeit">
      <div class="facebook"><img src="/assets/fb.gif" alt="fb" width="177" height="24" /></div>
      <div class="twitter"><img src="/assets/twitter.gif" alt="twitter" width="98" height="22" /></div>
    </div>
  </div>
  <div class="aside">
    <div class="author">
      <div class="photo">
        <%= image_tag(@person.avatar, :size => "71x71") %>
        <span class="mask"></span>
      </div>
      <h3>
        <%= link_to @person.name, '/profile/' + @person.id.to_s %>
    </div>
    <div class="info">
      <% if @works.count > 0 %>
        <h4>Другие работы автора:</h4>
        <ul class="items-list">
        <% @works.each do |work| %>
          <li>
            <a href="/inside_project/<%= work.id %>/">
              <%= image_tag(work.thumbnail, :size => "100x100") %>
              <span class="mask"></span>
            </a>
          </li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>