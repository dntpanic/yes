<div class="main">
  <div class="content">
    <h1><%= @project.title %></h1>
    <p><%=raw @project.content %></p>
    <div class="likeit">
       <div class="facebook">
        <div class="fb-like" data-send="false" data-show-faces="false"></div>
      </div>
      <div class="twitter">
        <a href="https://twitter.com/share" class="twitter-share-button" data-text="This page is so cool:" data-hashtags="betterthanworse">Tweet</a>
      </div>
    </div>
  </div>
  <div class="aside">
    <div class="author">
      <div class="photo">
        <%= image_tag(@person.avatar, :size => "71x71") %>
        <span class="mask"></span>
      </div>
      <h3>
        <%= link_to @person.name, '/profile/' + @person.id.to_s %>
    </div>
    <div class="info">
      <% if @works.count > 0 %>
        <h4>Другие работы автора:</h4>
        <ul class="items-list">
        <% @works.each do |work| %>
          <li>
            <a href="/inside_project/<%= work.id %>/">
              <%= image_tag(work.thumbnail, :size => "100x100") %>
              <span class="mask"></span>
            </a>
          </li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>